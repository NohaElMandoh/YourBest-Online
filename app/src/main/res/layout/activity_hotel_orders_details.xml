<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    android:background="#03122F"
    android:orientation="vertical"
    tools:context="com.example.prof_mohamedatef.yourbestonlinetv.HotelOrders_details">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <TextView
        android:textColor="#FFF"
        android:id="@+id/txt_title_username_hotel_orders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Your User name :"
        />
    <TextView
        android:textColor="#FFF400"
        android:id="@+id/txt_username_hotelorders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_title_ordernum_hotel_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order Number :"
            />
        <TextView
            android:textColor="#FFF400"
            android:id="@+id/txt_ordernum_hotelorders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_title_hotelname_hotel_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hotel Name :"
            />
        <TextView
            android:textColor="#FFF400"
            android:id="@+id/txt_hotelname_hotelorders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_title_roomnums_hotel_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reserved Rooms :"
            />
        <TextView
            android:textColor="#FFF400"
            android:id="@+id/txt_roomnums_hotelorders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_title_Datefrom_hotel_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date From :"
            />
        <TextView
            android:textColor="#FFF400"
            android:id="@+id/txt_Datefrom_hotelorders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_title_Dateto_hotel_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date To :"
            />
        <TextView
            android:textColor="#FFF400"
            android:id="@+id/txt_Dateto_hotelorders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_title_roomprice_hotel_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Room Price / 1 night :"
            />
        <TextView
            android:textColor="#FFF400"
            android:id="@+id/txt_roomprice_hotelorders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_title_totalcashrate_hotel_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Cash Rate :"
            />
        <TextView
            android:textColor="#FFF400"
            android:id="@+id/txt_totalcashrate_hotelorders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>